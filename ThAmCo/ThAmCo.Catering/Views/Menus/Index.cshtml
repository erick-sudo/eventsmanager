@model IEnumerable<ThAmCo.Catering.Models.Menu>

@{
    ViewData["Title"] = "Index";
}

<h1>Available Menu</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MenuName)
            </th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MenuName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.MenuId">Edit</a> | 
                <a asp-action="Details" asp-route-id="@item.MenuId">Details</a> | 
                <a asp-action="Delete" asp-route-id="@item.MenuId">Delete</a> | 
            </td>
            <td>
                    <a asp-action="ViewFoodItems" asp-route-id="@item.MenuId">View Food Items</a>
            </td>
        </tr>
}
    </tbody>
</table>
